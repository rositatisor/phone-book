{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="left-side register-image"></div>
<div class="right-side register">
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    {{ form_start(registrationForm, { 'attr': {'class': 'registration'} }) }}
    <h1>Register</h1>
        {{ form_row(registrationForm.email, { 
            label: false,
            attr: {'class': 'registration-input', 'placeholder':'Email'} 
        }) }}
        {{ form_row(registrationForm.plainPassword, {
            label: false,
            attr: {'class': 'registration-input', 'placeholder':'Password'}
        }) }}
        <div class="terms">
            {{ form_row(registrationForm.agreeTerms, { attr: {'class': 'agree-terms'} }) }}
        </div>
        <button type="submit" class="btn">Register</button>
        <a class="login" href="{{ path('app_login') }}">Already have an account? Sign in!</a>
    {{ form_end(registrationForm) }}

</div>
{% endblock %}
