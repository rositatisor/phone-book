{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="column">
    <h2>Giving access of contacts</h2>
    {% if giving_access is empty %}
    <p class="empty">There are no connections shared with others.</p>
    {% endif %}
    <div class="item-list">
        {% for connection in giving_access %}
            <div class="item">
                {% for guest in guests %}
                    {% if guest.id == connection.guest.id %}
                        <div class="title">Guest: {{guest.email}}</div>
                        <div class="title">Contact name: {{connection.contact.name}}</div>
                        <div class="title">Contact phone: {{connection.contact.phone}}</div>
                        <div class="buttons">
                            <form action="{{path('connection_delete', {id:connection.id})}}" method="POST">
                                <button class="submit-btn" type="submit">Stop sharing</button>
                            </form>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}